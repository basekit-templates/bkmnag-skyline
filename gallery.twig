{% extends "layout.twig" %}
{% block content %}

<div id="wrap">
	<header class="bk-header">
		{{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png'),"showTplWidget":"0"})|raw}}
		{{widget('companyname', 'companyname', {"business": "profile"})|raw}}
	</header>
	<nav class="bk-nav" id="nav">
		{{widget('extendednavigation', 'navigationheader', {"align":"left"})|raw}}
		{{widget('profile', 'footerprofileleft', { 'profileType' : 'socialicons' })|raw}}
	</nav>
	<div role="main" id="main">
		<div class="slideshow-wrapper">
			{{widget('responsiveslideshow', 'responsiveslideshow',
				{'duration':'10',
					'transSpeed': '1000',
					'transType': 'fade',
					'showButtons': true,
					'showBullets': true,
					'allowPause': false,
					'allowLoop': true,
					'showDescription': true,
					'showTitle': true,
					'crop': true,
					'images': [
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/gallery/1.jpg'), 'title':'Fantastic Skyline Template', 'description': 'Lorem ipsum dolor sit amet, consectetur adipiscing elit'},
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/gallery/2.jpg'), 'title':'Epic Landscapes', 'description': 'Lorem ipsum dolor sit amet'},
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/gallery/3.jpg'), 'title':'Slideshow nice & easy', 'description': 'Lorem ipsum dolor sit amet'},
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/gallery/4.jpg'), 'title':'Skyline Template', 'description': 'Lorem ipsum dolor sit amet'},
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/gallery/5.jpg'), 'title':'Fantastic Skyline', 'description': 'Lorem ipsum dolor sit amet, consectetur adipiscing elit'},
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/gallery/6.jpg'), 'title':'Fantastic Skyline', 'description': 'Lorem ipsum dolor sit amet'}
					]
				})|raw
			}}
		</div>
		<div class="container" id="container">
			{{zone('main')|raw}}
		</div><!--end contain-->
		{% include 'includes/footer.twig' %}
	</div><!--end main-->
</div><!--end wrap-->

{% endblock %}